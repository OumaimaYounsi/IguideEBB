{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idservice</th>
                <td>{{ service.idservice }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ service.nom }}</td>
            </tr>
            <tr>
                <th>NombreMax</th>
                <td>{{ service.nombreMax }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{{ service.datedebut ? service.datedebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{{ service.datefin ? service.datefin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Cible</th>
                <td>{{ service.cible }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ service.lieu }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ service.prix }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ service.image }}</td>
            </tr>
            <tr>
                <th>Nomcategorie</th>
                <td>{{ service.nomcategorie }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_service_index') }}">back to list</a>

